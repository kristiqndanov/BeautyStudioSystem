@model IEnumerable<BeautyStudioSystem.ViewModels.ServiceViewModel>

@{
    ViewData["Title"] = "Our Services";
}

<div class="container mt-5">

    <h1 class="text-center mb-4">Our Services</h1>

    <div id="servicesCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">

            @{
                bool isFirst = true;
            }

            @foreach (var service in Model)
            {
                    <div class="carousel-item @(isFirst ? "active" : "")">
                        <div class="d-flex justify-content-center">
                            <a asp-controller="Services"
                               asp-action="Details"
                               asp-route-id="@service.Id"
                               class="text-decoration-none text-dark">

                                <div class="card shadow" style="width: 24rem;">
                                    <img src="~/images/services/@(service.Id).jpg"
                                         class="card-img-top"
                                         alt="@service.Name"
                                         style="height: 300px; object-fit: cover;" />

                                    <div class="card-body text-center">
                                        <h4 class="card-title">@service.Name</h4>
                                    </div>
                                </div>

                            </a>
                        </div>
                    </div>

                isFirst = false;
            }

        </div>

        <button class="carousel-control-prev" type="button"
                data-bs-target="#servicesCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>

        <button class="carousel-control-next" type="button"
                data-bs-target="#servicesCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>

    </div>
</div>
