@model IEnumerable<ClientViewModel>

@{
    ViewData["Title"] = "Clients";
}

@if (ViewBag.Message != null)
{
        <p class="text-danger">@ViewBag.Message</p>
}

@if (TempData["Message"] != null)
{
        <div class="alert alert-success">
        @TempData["Message"]
        </div>
}



<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Clients</h1>
</div>

<form asp-action="Index" method="post" class="mb-3">
    <div class="input-group">
        <input type="text"
               name="search"
               value="@Context.Request.Query["search"]"
               class="form-control"
               placeholder="Search clients by name or email" />

        <button class="btn btn-primary" type="submit">
            Search
        </button>
    </div>
</form>


<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Full Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Reservations</th>
                <th scope="col" class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                    <tr>
                        <td colspan="5" class="text-center py-4">No clients found.</td>
                    </tr>
            }
            else
            {
                foreach (var client in Model)
                {
                            <tr>
                                <td>@client.FullName</td>
                                <td>@client.Email</td>
                                <td>@client.Phone</td>
                                <td>
                                        <a asp-controller="Clients"
                                                asp-action="ClientReservations"
                                        asp-route-id="@client.Id"
                                        class="text-decoration-none">See reservations</a>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group" aria-label="Actions">
                                        <a class="btn btn-sm btn-outline-primary" asp-action="UpdateClient" asp-route-id="@client.Id">Edit</a>
                                        <form asp-action="DeleteClient" asp-route-id="@client.Id" method="post" class="d-inline ms-1" onsubmit="return confirm('Are you sure you want to delete this client?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                }
            }
        </tbody>
    </table>
</div>