@model IEnumerable<ClientViewModel>

@{
    ViewData["Title"] = "Clients";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Clients</h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Full Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Reservations</th>
                <th scope="col" class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                    <tr>
                        <td colspan="5" class="text-center py-4">No clients found.</td>
                    </tr>
            }
            else
            {
                foreach (var client in Model)
                {
                            <tr>
                                <td>@client.FullName</td>
                                <td>@client.Email</td>
                                <td>@client.Phone</td>
                                <td>
                                        <a asp-controller="Reservations"
                                        asp-action="ByClient"
                                        asp-route-clientId="@client.Id"
                                        class="text-decoration-none">See reservations</a>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group" aria-label="Actions">
                                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@client.Id">Edit</a>
                                        <form asp-action="Delete" asp-route-id="@client.Id" method="post" class="d-inline ms-1" onsubmit="return confirm('Are you sure you want to delete this client?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                }
            }
        </tbody>
    </table>
</div>